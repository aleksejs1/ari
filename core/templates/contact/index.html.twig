{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
    <h1>Contact index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>
                    {% for contact_name in contact.contactNames %}
                        <a href="{{ path('app_contact_name_edit', {'id': contact_name.id}) }}">{{ contact_name.given }} {{ contact_name.family }}</a>    
                    {% else %}
                        <a href="{{ path('app_contact_name_new', {'contact': contact.id}) }}">Add name</a>
                    {% endfor %}
                </td>
                <td>{% for contact_date in contact.contactDates %}
                        <a href="{{ path('app_contact_date_edit', {'id': contact_date.id}) }}">{{ contact_date.date|date('Y-m-d') }}</a>    
                    {% else %}
                        <a href="{{ path('app_contact_date_new', {'contact': contact.id}) }}">Add date</a>
                    {% endfor %}</td>
                <td>
                    <a href="{{ path('app_contact_show', {'id': contact.id}) }}">show</a>
                    <a href="{{ path('app_contact_edit', {'id': contact.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_contact_new') }}">Create new</a>
{% endblock %}
